    <!--- FILTER -->
    <filter>
        <filter-name>RestrictionFilter</filter-name>
        <filter-class>Filter.RestrictionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RestrictionFilter</filter-name>
        <url-pattern>/RestrictAccess/*</url-pattern>
    </filter-mapping>

